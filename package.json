{
    "name": "deuterium",
    "version": "0.0.2",
    "description": "Package for full stack development",
    "author": "Kyle Bromma <kbromma@gmail.com>",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "scripts": {
        "clean": "lerna run clean",
        "pub": "yarn lint && yarn test && yarn pub-build && yarn actual-pub && yarn clean",
        "actual-pub": "lerna version && yarn npm-pub",
        "lint": "yarn build && eslint packages --ext .js,.jsx  && flow && yarn clean",
        "test": "yarn build && jest --coverage && yarn clean",
        "build": "lerna run build",
        "pub-build": "lerna run pub-build",
        "test-new": "yarn build && jest --coverage --changedSince=master && yarn clean",
        "npm-pub": "node ./scripts/publish"
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/node": "^7.2.2",
        "@babel/plugin-proposal-do-expressions": "^7.2.0",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.2.0",
        "@babel/plugin-proposal-optional-chaining": "^7.2.0",
        "@babel/plugin-proposal-pipeline-operator": "^7.2.0",
        "@babel/plugin-transform-runtime": "^7.2.0",
        "@babel/preset-env": "^7.2.3",
        "@babel/preset-flow": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "@babel/runtime-corejs2": "^7.2.0",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.6.0",
        "babel-plugin-flow-react-proptypes": "^24.1.2",
        "cross-env": "^5.2.0",
        "eslint": "^5.12.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^3.4.0",
        "eslint-import-resolver-lerna": "^1.0.0",
        "eslint-plugin-flowtype": "^3.2.1",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-monorepo": "^0.2.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.3",
        "flow-bin": "^0.90.0",
        "flow-copy-source": "^2.0.2",
        "jest": "^23.6.0",
        "lerna": "^3.10.5",
        "prettier": "1.15.3",
        "regenerator-runtime": "^0.13.1"
    },
    "dependencies": {
        "@babel/runtime": "^7.2.0",
        "koa": "^2.6.2",
        "koa-helmet": "^4.0.0",
        "koa-router": "^7.4.0",
        "minimist": "^1.2.0",
        "react": "^16.7.0",
        "shelljs": "^0.8.3"
    }
}
